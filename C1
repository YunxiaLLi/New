#include <stdio.h>
#include <math.h>

int main () {

    char grade;
   
    printf("\nEnter a letter grade: ");
    scanf("%C", grade);

    switch(grade) {
        case 'A':
            printf("perfect!\n");
            break;
        case 'B':
            printf("You did good!\n");
            break;
        case 'C':
            printf("You did ok!\n");
            break;
        case 'D':
            printf("At least it's not an F!\n");
            break;
        case 'F':
            printf("You failed!\n");
            break;  
        default:
            printf("Please enter only valid grades");
    }

    return 0;

}
